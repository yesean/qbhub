{
  "name": "qbhub",
  "author": "Sean Ye <seanye24@gmail.com>",
  "description": "Quizbowl Meets Automation",
  "version": "1.0.0",
  "license": "MIT",
  "packageManager": "yarn@4.0.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn workspace @qbhub/server run start",
    "db": "docker compose --profile dev up --detach",
    "dev": "yarn run db && env $(grep -v '^#' .env.development) yarn workspaces foreach -pviA run dev",
    "format": "yarn workspaces foreach -pviA run format",
    "lint": "yarn workspaces foreach -pviA run format:check && yarn workspaces foreach -pviA run lint",
    "lint:debug": "yarn workspaces foreach -pviA run lint:debug",
    "build": "yarn workspaces foreach -viA run build && yarn postbuild",
    "clean": "yarn workspaces foreach -tpviA run clean",
    "test": "yarn workspaces foreach -pviA run test",
    "postbuild": "cp -r packages/client/dist packages/server/dist-client"
  }
}
