{
  "name": "qbhub",
  "author": "Sean Ye <seanye24@gmail.com>",
  "description": "Quizbowl Meets Automation",
  "version": "1.0.0",
  "license": "MIT",
  "packageManager": "yarn@3.6.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn workspace @qbhub/server run start",
    "dev": "env $(grep -v '^#' .env.development) yarn workspaces foreach -pvi run dev",
    "lint": "yarn workspaces foreach -pvi run lint",
    "lint:debug": "yarn workspaces foreach -pvi run lint:debug",
    "format": "yarn workspaces foreach -pvi run format",
    "build": "yarn workspaces foreach -vi run build && yarn postbuild",
    "postbuild": "cp -r packages/client/dist packages/server/dist-client",
    "clean": "yarn workspaces foreach -tpvi run clean",
    "test": "yarn workspaces foreach -pvi run test"
  }
}
